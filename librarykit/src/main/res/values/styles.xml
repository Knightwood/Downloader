<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>
<!--dialog消失动画-->
    <style name="animate_dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>

    <style name="DialogThemes" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/orange</item>
        <!--状态栏颜色设为透明-->
        <item name="colorPrimaryDark">@color/orange_dark</item>
        <item name="colorAccent">@color/accent_dark</item>
        <!--以下三行使dialogFragment扩展到屏幕边缘且全屏-->
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

</resources>
